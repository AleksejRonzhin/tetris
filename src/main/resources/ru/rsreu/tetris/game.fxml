<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<BorderPane fx:id="bpMain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.rsreu.tetris.GameController">
    <bottom>
        <HBox>
            <Button fx:id="btnStart" onAction="#btnStartOnAction" text="Начать игру"
                    BorderPane.alignment="CENTER"/>
            <Button fx:id="btnStop" onAction="#btnStopOnAction" text="Пауза"
                    BorderPane.alignment="CENTER" visible="false"/>
            <Button fx:id="btnContinue" onAction="#btnContinueOnAction" text="Продолжить"
                    BorderPane.alignment="CENTER" visible="false"/>
        </HBox>
    </bottom>
    <center>
        <Canvas fx:id="gameCanvas" height="500" width="250" BorderPane.alignment="CENTER"/>
    </center>
    <right>
        <VBox>
            <Label fx:id="lblScore"/>
        </VBox>
    </right>
</BorderPane>
